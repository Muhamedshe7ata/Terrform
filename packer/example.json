{
  "variables": {
    "image": "ubuntu-16-04-x64",
    "version":""
  },
  "builders": [
  {
    "type": "digitalocean",
    "image": "{{user `image`}}",
    "region": "lon1",
    "size": "512mb",
    "ssh_username": "root",
    "snapshot_name":"example-{{user `image`}}-{{user `version`}}"
  }],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./ansible_playbook/prepare.yml",
      "extra_arguments": [
        "--extra-vars", 
        "version={{user `version`}}"
      ]
    }
  ]
}
